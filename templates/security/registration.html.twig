{% form_theme form 'bootstrap_4_layout.html.twig' %}
<body>
    <div class="container-fluid">
        <div class="row ">
            <div class="col-md-6 col-sm-12 center">
             <img src="img/home.png" alt="">
            </div>    
            <div class="col-md-6">
                <br>
                <h2>Rejoins notre communauté !</h2>
                <p>Tu as déjà un compte ? <a href="{{ path('security_login')}}">Connexion</a> </hp>
                <br>
                <button class="btn btn-fb btn-lg btn-block">Rejoins via Facebook</button>

        {{ form_start(form)}}
        <div class="row">
            <div class="col-auto">
        {{ form_row(form.prenom, {'label':'Prénom','attr': {'placeholder' : 'John'}})}}
        </div>
        <div class="col-auto">
        {{ form_row(form.nom,{'attr': {'placeholder' : 'Smith'}})}}
    </div>
        </div>
     
        {{ form_row(form.username,{'label': 'Nom d\'utilisateur','attr': {'placeholder' : 'Matrix', 'size': '30'}})}}
        {{ form_row(form.email,{'attr': {'placeholder' : 'johnsmith@gmailcom'}})}}
        {{ form_row(form.password, {'label': 'Mot de passe'})}}
        {{ form_row(form.confirm_password,{'label': 'Confirmer le mot de passe'})}}


        <button type="submit" class="btn btn-inscription btn-lg btn-block">Rejoins ma communauté !</button>
        {{ form_end(form)}}
        </div>
        </div>
        </div>
</body>
</html>





